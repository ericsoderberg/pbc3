<%= form_for(@page, :url => page_feature_path(@page)) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div id="page_content" class="yui_editor">
    <section>
      <div class="field yui-skin-sam">
        <%= f.label :hero_text %><br/>
        <span class="help">The text overlaying the hero image on the home page.</span>
        <br />
        <%= f.text_area :hero_text, :size => '80x20', :class => 'textedit' %>
      </div>
      
      <div class="field">
        <%= f.label :feature_phrase %><br/>
        <span class="help">The short phrase at the bottom of the home page. Keep it to about 15 words.</span>
        <br />
        <%= f.text_field :feature_phrase, :size => '60' %>
      </div>
    </section>

    <aside>
      <div class="form">
        <div class="field">
          <%= f.label :feature_on_home_page?, :class => 'inline' %>
          <%= f.check_box :featured %>
        </div>
        <div id="feature_indexer"
          <%= raw @page.featured? ? '' : 'style="display:none"' %>>
          <%= render :partial => 'feature_indexer' -%>
        </div>
      </div>
    </aside>
  </div>
  
  <div class="actions">
    <%= f.submit %>
    <%= render 'pages/cancel_controls' %>
  </div>
  
<% end %>

<%= javascript_tag do %>
  <%= render :partial => 'pages/text_editor.js' -%>
  <%= render :partial => 'feature_indexer.js' -%>
  <%= render :partial => 'pages/form_aids.js' -%>
<% end -%>

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= yield(:title) || (@site ? @site.title : 'Site') %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <% if mobile_device? -%>
    <%= stylesheet_link_tag    "mobile/mobile", media: "only screen",
      "data-turbolinks-track" => true %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <link href="<%= image_path('pbc3-icon.png') %>" rel="apple-touch-icon">
    <link href="<%= image_path('pbc3-icon.png') %>" rel="apple-touch-icon-precomposed">
  <% end -%>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <% if mobile_device? -%>
    <%= javascript_include_tag "mobile/mobile", "data-turbolinks-track" => true %>
  <% end -%>
  <%= yield(:scripts) %>
  <%= yield(:feed) %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="content" class="<%= yield(:content_class) %>">
    
  <header id="site_header">
    <h1><%= link_to raw(site_title), root_path %></h1>
    <h2><%= @site ? @site.subtitle : '' %></h2>
    <div id="notice"><%= notice %><%= alert %></div>
    <% if not mobile_device? -%>
      <%= render :partial => 'layouts/auth' %>
    <% end -%>
  </header>
  
  <% unless mobile_device? -%>
    <%= render :partial => 'layouts/site_nav' %>
  <% end -%>

<%= yield %>

  <footer>
    <% if @site -%>
      <div id="site_address">
        <%= link_to @site.address,
          'http://maps.google.com/maps?daddr=' + @site.address %>
      </div>
      <div id="site_phone">
        <%= @site.phone %>
      </div>
      <div id="copyright">
        <%= raw @site.copyright %>
      </div>
    <% end -%>
    <% if mobile_device? -%>
      <%= render :partial => 'layouts/auth' %>
    <% end -%>
  </footer>
  
  </div>
</body>
</html>

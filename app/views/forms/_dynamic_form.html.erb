<%= content_tag_for(:li, dynamic_form) do %>
  <% if current_user -%>
    <% filled_forms = 
      dynamic_form.filled_forms.for_user(current_user) -%>
    <% if filled_forms.length > 0 -%>
      <% if dynamic_form.payable? -%>
        <%= link_to dynamic_form.name,
          form_fills_path(dynamic_form) %>
      <% else -%>
        <%= link_to dynamic_form.name,
          edit_form_fill_path(dynamic_form, filled_forms.first) %>
      <% end -%>
    <% else -%>
      <%= link_to dynamic_form.name, new_form_fill_path(dynamic_form) %>
    <% end -%>
  <% else -%>
    <%= link_to dynamic_form.name, new_form_fill_path(dynamic_form) %>
  <% end -%>
<% end %>

<% title "Forms" -%>

<section>
  <header>
    <h1>
      <% if @page -%>
        <%= link_to @page.name, friendly_page_path(@page) %>
      <% end -%>
      Forms</h1>
  </header>

<% unless @forms.empty? -%>
<table class="index">
  <tr>
    <th>Name</th>
    <% unless @page -%>
      <th>Page</th>
    <% end -%>
  </tr>

<% @forms.each do |form| %>
  <tr>
    <td><%= link_to form.name, form_path(form) %></td>
    <% unless @page -%>
    <td><%= link_to form.page.name, friendly_page_path(form.page) %></td>
    <% end -%>
  </tr>
<% end %>
</table>
<% end -%>

<br />

<div id="add_content">
  <%= link_to 'Add Form',
    new_form_path(:page_id => (@page ? @page.id : nil)) %>
</div>

</section>

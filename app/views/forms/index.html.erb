<% title "Forms" -%>

<section>
  <header>
    <h1>Forms</h1>
  </header>

<table class="index">
  <tr>
    <th>Name</th>
    <th>Page</th>
  </tr>

<% @forms.each do |form| %>
  <tr>
    <td><%= link_to form.name, form_path(form) %></td>
    <td><%= link_to form.page.name, friendly_page_path(form.page) %></td>
  </tr>
<% end %>
</table>

<br />

<div id="add_content">
  <%= link_to 'Add Form', new_form_path %>
</div>

</section>

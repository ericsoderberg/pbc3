<%= form_for(@form) do |f| %>
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% @form.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @copy_form -%>
    <%= hidden_field_tag :copy_form_id, @copy_form.id %>
  <% end -%>

  <%= f.hidden_field :page_id %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :payable? %>
    <%= f.check_box :payable %>
  </div>
  <% if @form.id -%>
  <div class="field">
    <%= f.label :page %>
    <div id="choose_page_id"
      style="display: inline-block; vertical-align: bottom"></div>
  </div>
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
    <% if @form.id -%>
    | <%= link_to 'Done', form_path(@form) %>
    <% else -%>
    |
      <% if @page -%>
        <%= link_to 'Done', forms_path(:page_id => @page.id) %>
      <% else -%>
        <%= link_to 'Done', forms_path() %>
      <% end -%>
    <% end -%>
    <% if @form.id -%>
    | <%= link_to 'Delete form', @form, :confirm => 'Are you sure?',
        :method => :delete %>
    <% end -%>
  </div>
  
  <%= hidden_field_tag 'field_order',
    @form.form_fields.map{|ff| ff.id}.join(', '),
    :id => 'field_order'%>
  
<% end %>

<%= javascript_tag do -%>
  <% if @form.id -%>
    <%= render :partial => 'forms/form_aids.js' %>
  <% end -%>
<% end -%>

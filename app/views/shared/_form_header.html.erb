<% cancel_path ||= nil -%>
<% message ||= nil -%>
<div class="form__header">
  <span class="form__title"><%= title %></span>
  <% if cancel_path -%>
    <%= link_to render(:partial => 'shared/cancel_icon'), cancel_path, {:class => 'control-icon'} %>
  <% end -%>
  <% if message -%>
    <div class="form__header-message"><%= message %></div>
  <% end -%>
</div>

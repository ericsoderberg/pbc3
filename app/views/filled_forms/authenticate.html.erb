<% title @form.name -%>

<%= render :partial => "forms/header" %>

<section id="form_authenticate">
<div id="authentication_text">
  <%= raw @form.authentication_text %>
</div>

<div id="sign_in">
<%= form_for(@new_user, :as => :user, :url => session_path(:user)) do |f| %>

  <p><%= f.label :email %><br />
  <%= f.text_field :email, size: 30 %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, size: 30 %></p>

  <% if @devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>
  
  <div class="form_errors"><%= alert %></div>

  <p><%= f.submit "Sign in" %></p>
<% end %>

<%- if @devise_mapping.registerable? %>
  <%= link_to "Sign up", new_registration_path(:user) %><br />
<% end -%>

<%- if @devise_mapping.recoverable? %>
  <%= link_to "Forgot your password?", new_password_path(:user) %><br />
<% end -%>
</div>

</section>

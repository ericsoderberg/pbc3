<% title "Add Holiday" -%>

<%= form_for(@holiday, :html => { class: "form" }) do |f| %>
  <%= render :partial => 'form_errors' %>

<div class="form__header">
  <span class="form__title">Add Holiday</span>
  <%= link_to 'X', holidays_path %>
</div>

<%= render :partial => 'form_contents', :locals => {:f => f} %>

<div class="form__footer">
  <%= f.submit "Add", class: 'btn btn--primary' %>
</div>

<% end %>

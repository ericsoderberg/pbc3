<div id="newsletter" style="margin: 20px auto;
padding: 0px;
width: 600px;
background: #f8f8f8;">
  <header style="position: relative;
  padding: 15px 20px;
  height: 28px;
  line-height: 28px;
  <%= raw @header_css %>">
    <h1 style="display: inline-block;
    vertical-align: baseline;
    margin: 0px;
    padding: 0px;
    padding-right: 40px;
    white-space: nowrap;
	  font-weight: bold;
	  color: #eee;
    font-size: 28px;
    line-height: inherit;"><%= link_to @newsletter.name, newsletter_path(@newsletter), :style => "text-align: center;
    font-size: inherit;
    text-decoration: none;
    font-weight: bold;
	  color: #eee;" %></h1>
    <span class="date" style="position: absolute;
    top: 15px;
    right: 20px;">
      <%= link_to @newsletter.published_at.relative_str(true),
        newsletter_path(@newsletter), :style => "text-align: center;
        font-size: 18px;
        text-decoration: none;
        font-weight: bold;
    	  color: #eee;" %>
    </span>
    
    <%= yield(:admin) %>
  </header>
  
  <% if @newsletter.note and not @newsletter.note.empty? -%>
  <section id="note" class="focus"
    style="padding: 20px; background-color: #fff;">
    <%= raw @newsletter.note %>
  </section>
  <% end -%>

  <section id="messages" class="<%= @focus_messages ? 'focus' : '' %>"
    style="padding: 20px 20px 10px 20px; <%= @focus_messages ? 'background-color: #fff;' : '' %>">
    <h2 style="font-size: 18px;
    color: #777;
    margin: 0px;
    margin-bottom: 10px;"><%= link_to 'Messages', messages_path, :style => 'font-size: 18px;
    color: #777;
    text-decoration: none' %></h2>
    <% if @next_message -%>
      <%= render :partial => 'newsletter_mailer/message',
        :locals => {:message => @next_message} %>
    <% end -%>
    <% if @previous_message -%>
      <%= render :partial => 'newsletter_mailer/message',
        :locals => {:message => @previous_message} %>
    <% end -%>
  </section>

  <% if @featured_page -%>
  <section id="feature" class="focus <%= @featured_event ? 'featured_event' : 'featured_page' %>" style="padding: 30px 20px; background-color: #fff;">
    <div id="banner" style="padding: 0px;">
      <%= image_tag @featured_page.style.banner.url(:normal), :style => 'width: 560px; height: 140px;', :alt => @featured_page.name %>
    </div>

    <% if @featured_event -%>
    <h3 style="position: relative;
    margin: 0px;
    padding: 20px 0px;">
      <% contextual_times(@featured_event).each do |timestamp| -%>
        <span class="event_range" style="position: absolute;
        left: 0px;
        top: 20px;
        font-size: 14px;
        font-weight: normal;
        width: 200px;
        color: #777;">
          <%= raw timestamp.sub(' - ', ' -<br/>') %>
        </span>
      <% end -%>
      <%= link_to @featured_event.name, friendly_page_path(@featured_page),
        :style => 'font-size: 18px; vertical-align: top;
        margin-left: 200px; text-decoration: none;
        color: #0b6199;
        font-weight: bold;' %>
    </h3>
    <% else -%>
    <h3>
      <%= link_to @featured_page.name, friendly_page_path(@featured_page),
        :style => 'font-size: 18px; vertical-align: top;
        margin-left: 200px; text-decoration: none;
        color: #0b6199;
        font-weight: bold;' %>
    </h3>
    <% end -%>

    <% if @featured_event -%>
      <% if @featured_event.notes and ! @featured_event.notes.empty? -%>
        <div class="event_notes" style="margin-left: 200px;">
          <%= h @featured_event.notes %>
        </div>
      <% end -%>
    <% else -%>
      <div id="text" style="margin-left: 200px;">
        <%= raw @featured_page.text %>
      </div>
    <% end -%>

  </section>
  <% end -%>

  <% unless @newsletter.events.empty? -%>
  <section id="events" style="margin: 0px;
  padding: 20px 20px 10px 20px;">
    <h2 style="font-size: 18px;
    color: #777;
    margin: 0px;
    margin-bottom: 10px;"><%= link_to 'Events', main_calendar_path, :style => 'font-size: 18px;
    color: #777;
    text-decoration: none;' %></h2>
    <ul style="list-style-type: none;
    padding: 0px;
    margin: 0px;">
    <% @newsletter.events.each do |event| -%>
      <% if event != @featured_event -%>
      <%= render :partial => 'newsletter_mailer/event',
        :locals => {:event => event} %>
      <% end -%>
    <% end -%>
    </ul>
  </section>
  <% end -%>

  <footer style="color: #ddd; font-size: 12px; padding: 10px 20px; <%= raw @header_css %>">
    <% if @site -%>
      <%= link_to @site.title, root_path, :style => 'text-decoration: none;
  	  color: #f8f8f8; display: inline-block;
      margin-right: 10px;' %>
      <div id="copyright" style="display: inline-block;
      margin-right: 10px;">
        <%= raw @site.copyright %>
      </div>
      <%= @site.address %>
    <% end -%>
    <% if @newsletter.email_list -%>
      <%= link_to 'unsubscribe',
        unsubscribe_email_list_path(@newsletter.email_list),
        :id => 'unsubscribe', :style => 'text-decoration: none;
    	  color: #f8f8f8; float: right;' %>
    <% end -%>
  </footer>
</div>

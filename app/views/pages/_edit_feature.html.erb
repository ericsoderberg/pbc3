<%= form_for(@page, :html => { :multipart => true }) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="page_content">
    <section>
      <div class="field">
        <%= f.label :feature_text %><br />
        <%= f.text_area :feature_text, :size => '60x10' %>
      </div>
      
      <div class="actions">
        <%= f.submit 'Update' %>
        <%= render 'cancel_controls' %>
      </div>
    </section>
    
    <aside>
      <div class="form">
        <div class="field">
          <%= f.label :feature_image %><br />
          <% if @page.feature_image.exists? -%>
            <%= image_tag @page.feature_image.url(:thumb) %>
            <%= check_box_tag 'delete_feature_image' %> delete image?
          <% end -%>
          <%= f.file_field :feature_image %>
        </div>
        <div class="field">
          <%= f.label :hero_background %><br />
          <% if @page.hero_background.exists? -%>
            <%= image_tag @page.hero_background.url(:thumb) %>
            <%= check_box_tag 'delete_hero_background' %> delete image?
          <% end -%>
          <%= f.file_field :hero_background %>
        </div>
        <div class="field">
          <%= f.label :feature? %><br />
          <%= f.check_box :featured %>
        </div>
      </div>
    </aside>
  </div>
<% end %>

<% title "Edit #{@page.name}" -%>

<%= form_for(@page, :html => { class: "form" }) do |f| %>

  <%= render :partial => 'shared/form_header',
    :locals => {:title => "Edit #{@page.name}", :cancel_path => friendly_page_url(@page)} %>

  <%= render :partial => 'form_contents', :locals => {:f => f} %>

  <div class="form__footer">
    <%= f.submit "Update", class: 'btn btn--primary' %>
  </div>

<% end %>

<%= render :partial => 'shared/delete', :locals => {:item => @page} %>

<%= form_for(@page, :html => {class: "form"}) do |f| %>
  <%= render :partial => 'form_errors' %>
  
<div class="form__header">
  Edit <%= @page.name %>
</div>

<div class="form__contents">
<fieldset>
  <legend>Context</legend>
  <ul class="form__fields list-bare">
    <li class="form__field">
      <%= f.label :title %>
      <%= f.text_field :name, :size => 80 %>
    </li>
    
    <li class="form__field">
      <%= f.label :title_prefix %>
      <%= f.text_field :url_prefix %>
      <div class="form__field-help">
        Use the parent page title here for generic page titles like 'Resources'
      </div>
    </li>

    <li class="form__field">
      <%= f.label :url_aliases %>
      <%= f.text_area :url_aliases, :size => '23x2' %>
    </li>

    <% if @page.id -%>
      <% if current_user.administrator? -%>
        <li class="form__field">
          <%= f.label :site_primary?, :class => 'inline' %>
          <%= f.check_box :site_primary %>
          <div class="form__field-help">
            Include in the top level site navigation
          </div>
        </li>
      <% end -%>
    <% else -%>
      <%= f.hidden_field :parent_id %>
    <% end -%>
  </ul>
</fieldset>

<fieldset>
  <legend>Email</legend>
  <ul class="form__fields list-bare">
    <li class="form__field">
      <%= f.label :email_list %>
      <%= f.collection_select :email_list, @email_lists, :name, :name,
        {:include_blank => 'none'}, {:class => 'email_list'} %>
    </li>
  </ul>
</fieldset>

<fieldset>
  <legend>Social</legend>
  <ul class="form__fields list-bare">
    <li class="form__field">
      <%= f.label :facebook_url %>
      <%= f.text_field :facebook_url, :size => '80' %>
    </li>
    <li class="form__field">
      <%= f.label :twitter_name %>
      <%= f.text_field :twitter_name %>
    </li>
  </ul>
</fieldset>
</div>

  <div class="form__footer">
    <%= f.submit 'OK', class: 'btn btn--primary' %>
    <%= render 'cancel_control' %>
  </div>
<% end %>

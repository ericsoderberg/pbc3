<%= form_for(@page, :html => { :multipart => true }) do |f| %>
  <%= render :partial => 'form_errors' %>
  
<div class="edit_content">
  
  <section class="text_editing">
    <% if @site_reference -%>
      <%= hidden_field_tag 'site_reference', @site_reference %>
    <% end -%>
    
    <div class="field">
      <%= f.label :text %><br />
      <%= f.text_area :text, :size => '100x20', :class => 'textedit' %>
    </div>
  </section>
  
  <aside>
    <div class="form">
      <div class="field">
        <%= f.label :secondary_text %><br />
        <%= f.text_area :secondary_text, :size => '40x20', :class => 'textedit' %>
      </div>
    </div>
  </aside>
</div>

  <div class="actions">
    <%= f.submit %>
    <%= render 'cancel_controls' %>
  </div>
<% end %>

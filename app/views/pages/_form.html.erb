<%= form_for(@page, :html => { :multipart => true }) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div id="page_content" class="yui_editor">
  <section>
    <% if @site_reference -%>
      <%= hidden_field_tag 'site_reference', @site_reference %>
    <% end -%>
    <div class="field yui-skin-sam">
      <%= f.text_area :text, :size => '80x20' %>
    </div>
  </section>

  <aside>
    <div class="form">
      
      <div class="field">
        <%= f.label :page_name %><br />
        <%= f.text_field :name %>
      </div>
      
      <div class="field">
        <%= f.label :url_prefix %><span class="help"><br />
        <%= f.text_field :url_prefix %>
      </div>
      
      <div class="field">
        <%= f.label :url_aliases %><br />
        <%= f.text_area :url_aliases, :size => '30x2' %>
      </div>
      
      <div class="field">
        <%= f.label :style, :class => 'inline' %>
        <%= collection_select(:page, :style_id,
          Style.all, :id, :name,
          :include_blank => true) %>
        <%= link_to 'styles', styles_path %>
      </div>
      
      <div class="field">
        <%= f.label :animate_banners?, :class => 'inline' %>
        <%= f.check_box :animate_banner %>
      </div>
      
      <div class="field">
        <%= f.label :allow_highlights?, :class => 'inline' %>
        <%= f.check_box :highlightable %>
      </div>
      
      <div class="field under_construction">
        <%= f.label :email_list %><br />
        <div>under construction</div>
        <div id="email_list"></div>
      </div>
      
      <% if @page.possible_types.length > 1 -%>
      <div class="field">
        <%= f.label :type_of_page, :class => 'inline' %>
        <%= f.select :page_type,
          options_for_select(@page.possible_types, @page.page_type) %>
      </div>
      <% else -%>
        <%= f.hidden_field :page_type -%>
      <% end -%>
      
      <% if @page.id -%>
      <hr/>

      <div class="field">
        <%= f.label :parent_page %><br />
        <div id="parent_id"></div>
        <!--%= collection_select(:page, :parent_id,
          @page.possible_parents, :id, :name,
          :include_blank => true) %-->
      </div>
      
      <div id="parent_context">
        <%= render :partial => 'edit_for_parent' -%>
      </div>
      <% else -%>
        <%= f.hidden_field :parent_id %>
      <% end -%>
      
    </div>
  </aside>
</div>

  <div class="actions">
    <%= f.submit %>
    <%= render 'cancel_controls' %>
    <% if @page.id -%>
     | <%= link_to 'Delete page', @page, :confirm => 'Are you sure?',
      :method => :delete %>
    <% end -%>
  </div>
<% end %>

<%= javascript_tag do %>
  <%= render :partial => 'yui_editor.js' -%>
  
  <% if @page.id -%>
    <%= render :partial => 'parent_indexer.js' -%>
    <%= render :partial => 'email_list_chooser.js' -%>
  <% end -%>
<% end -%>

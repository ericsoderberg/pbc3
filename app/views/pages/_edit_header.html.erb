<header>
  <h1>Editing <%= @page.name %></h1>
  <ul class="nav">
    <% %w(text photos videos events feature contacts access).each do |aspect| -%>
    <li class="<%= @aspect == aspect ? 'active' : '' %>">
      <%= link_to aspect.capitalize,
        edit_page_path(@page, :aspect => aspect) %></li>
    <% end -%>
  </ul>
  <% unless %w(text feature).include?(@aspect) -%>
    <div id="done_page_editing">
      <%= button_to 'Done editing page', friendly_page_path(@page),
        :method => :get %>
    </div>
  <% end -%>
</header>

<% content_for :breadcrumbs do -%>
  <div id="breadcrumbs">
    <ul>
      <li><%= link_to 'Message Library', messages_path %></li>
      <li><%= link_to 'Books of the Bible', books_path %></li>
    </ul>
  </div>
<% end -%>

<section>
  
  <header>
    <h1 id="book_title"><%= @book %></h1>
  </header>

  <div id="messages">
    <%= render :partial => 'messages/messages',
      :locals => {:messages => @messages} %>
  </div>
  
</section>

<h1>Listing photos</h1>

<table>
  <tr>
    <th>Caption</th>
    <th>Photo file name</th>
    <th>Photo content type</th>
    <th>Photo file size</th>
    <th>Photo updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.caption %></td>
    <td><%= photo.photo_file_name %></td>
    <td><%= photo.photo_content_type %></td>
    <td><%= photo.photo_file_size %></td>
    <td><%= photo.photo_updated_at %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


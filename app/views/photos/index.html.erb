<h1>Listing photos</h1>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Caption</th>
    <th>File</th>
    <th>Type</th>
    <th>Size</th>
    <th>Updated at</th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= image_tag photo.photo.url(:thumb) %></td>
    <td><%= photo.caption %></td>
    <td><%= photo.photo_file_name %></td>
    <td><%= photo.photo_content_type %></td>
    <td><%= photo.photo_file_size %></td>
    <td><%= photo.photo_updated_at %></td>
    <td><%= link_to 'Delete', photo, data: {confirm: 'Are you sure?'},
      method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Photo', new_photo_path %>

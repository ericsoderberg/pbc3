<p>We offer multiple methods of payment. You may send us a check, via your checkbook or an online transaction from your bank, or use PayPal.</p>

<%= form_for(@payment) do |f| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% @payment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @form -%>
    <%= hidden_field_tag :form_id, @form.id %>
  <% end -%>
  <% if @filled_form_key -%>
    <%= hidden_field_tag :filled_form_key, @filled_form_key %>
  <% end -%>
  <%= hidden_field_tag :verification_key, @payment.verification_key %>
  
  <%= render :partial => 'filled_forms' %>
  
  <div class="regular_content">
    <section>
      <h3><%= @payment.id ? @payment.state.capitalize : 'Paying' %></h3>
      <div class="field">
        <%= f.label :amount %>
        <div>$<span id="payment_amount"><%= @payment.amount.to_s %></span></div>
        <%= hidden_field_tag 'payment[amount]', @payment.amount.to_s,
          :id => 'hidden_payment_amount' %>
      </div>
      <%= f.hidden_field :sent_at,
        :value => (@payment.sent_at ?
          l(@payment.sent_at.to_date()) : l(Date.today)) %>
      <div class="field">
        <%= f.label :method %>
        <ul class="payment_methods">
          <% Payment::METHODS.each do |method| -%>
            <li>
              <%= f.radio_button :method, method %>
              <label class="value" for="payment_method_<%= method.downcase %>">
                <%= method %>
                <% if method == 'check' -%>
                  <span class="help">(checkbook or online banking)</span>
                <% end -%>
                <% if method == 'PayPal' -%>
                  <span class="help">(PayPal account or credit card)</span>
                <% end -%>
              </label>
            </li>
          <% end -%>
        </ul>
      </div>
      <div class="payment_method_instructions">
        <div class="paypal-ish help">Note: Using your bank's online banking to send a check costs us less than using PayPal.</div>
        <div class="check-ish">
          Send to:
          <pre><%= @site.check_address %></pre>
        </div>
      </div>
    </section>
    
    <% if current_user and current_user.administrator? -%>
    <aside>
      <div class="form">
        <h3>Received</h3>
        <div class="field">
          <%= f.label :received_amount %><br />
          $<%= text_field_tag :received_amount,
            @payment.received_amount.to_s, :size => '5',
            :id => 'payment_received_amount',
            :name => 'payment[received_amount]' %>
        </div>
        <div class="field">
          <%= f.label :received_on %><br />
          <%= f.text_field :received_at,
            :value => (@payment.received_at ?
              l(@payment.received_at.to_date()) : '') %>
        </div>
        <div class="field">
          <%= f.label :notes %><br />
          <%= f.text_area :received_notes, :size => '40x4' %>
        </div>
      </div>
    </aside>
    <% end -%>
  </div>
  
  <div class="actions check-ish">
    <%= f.submit (@payment.state != 'pending' ? 'Update' : 'Submit') %>
    <% if @filled_form -%>
      <% if current_user -%>
        | <%= link_to 'Cancel',
          edit_form_fill_path(@filled_form.form, @filled_form) %>
      <% else -%>
        | <%= link_to 'Cancel',
          form_fill_path(@filled_form.form, @filled_form,
              {:filled_form_key => @filled_form_key}),
          :confirm => 'Are you sure?', :method => :delete %>
      <% end -%>
    <% end -%>
    <% if current_user and current_user.administrator? and @payment.id -%>
      | <%= link_to 'Delete payment record', @payment,
        :confirm => 'Are you sure?', :method => :delete %>
    <% end -%>
  </div>
<% end %>

<div class="actions paypal-ish">
  <% if @payment.id -%>
    <%= render :partial => 'paypal' %>
  <% end -%>
  <% if @filled_form -%>
  | <%= link_to 'Cancel',
    form_fill_path(@filled_form.form, @filled_form,
        {:filled_form_key => @filled_form_key}),
    :confirm => 'Cancel your request?', :method => :delete %>
  <% end -%>
  <% if current_user and current_user.administrator? and @payment.id -%>
    | <%= link_to 'Delete payment record', @payment,
      :confirm => 'Are you sure?', :method => :delete %>
  <% end -%>
</div>

<%= javascript_tag do %>
  <%= render :partial => 'form_aids.js' -%>
<% end %>

$(function() {
  $('.payment_forms input[type="checkbox"]').click(function () {
    var amount = parseInt($('#payment_amount').val(), 10),
      change = parseInt($(this).attr('data-amount'), 10);
    if ($(this).attr('checked')) {
      $('#payment_amount').val(amount + change);
    } else {
      $('#payment_amount').val(amount - change);
    }
  });
});

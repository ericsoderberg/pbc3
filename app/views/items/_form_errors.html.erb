<% if @item.errors.any? or @page_element.errors.any? %>
  <div class="form__error-explanation">
    <h2><%= pluralize(@item.errors.count + @page_element.errors.count, "error") %>
      prohibited this item from being saved:</h2>
    <ul>
    <% @item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <% @page_element.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

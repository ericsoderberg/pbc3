<% message ||= @message -%>
<% unless message.audio_message_files.empty? -%>
<audio id="message_audio" controls preload="false">
  <% message.audio_message_files.each do |message_file| -%>
    <source src="<%= message_file.file.url %>"
      type="<%= message_file.file.content_type %>" />
  <% end -%>
</audio>
<% end -%>

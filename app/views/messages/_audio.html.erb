<% message ||= @message -%>
<% unless message.audio_message_files.empty? -%>
<audio id="message_audio" controls preload="none">
  <% message.audio_message_files.each do |message_file| -%>
    <source src="<%= message_file.file.url %>"
      type="<%= message_file.file.content_type %>" />
    No audio with this browser
  <% end -%>
</audio>
<% end -%>

<%= javascript_tag do %>
$(function() {
  if (!Modernizr.audio.mp3) {
    $('audio').hide();
  }
});
<% end -%>

<div class="message">
  <div class="message_date">
    <% if message.date.year != Date.today.year -%>
    <div class="message_year">
      <%= message.date.year -%>
    </div>
    <% end -%>
    <%= message.date.relative_str(false) %>
  </div>
  <div class="message_title">
    <%= link_to message.title, message_path(message) %></div>
  <div class="message_verses"><%= message.verses %></div>
  <div class="message_author">
    <% if message.author -%>
      <%= link_to message.author.name, author_path(message.author) %>
    <% end -%>
  </div>
  <div class="message_files">
    <%= render :partial => 'messages/files',
      :locals => {:message => message} %>
  </div>
</div>

<% title "Sign In" -%>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: "form form--compact" }) do |f| %>

  <%= render :partial => 'shared/form_header',
    :locals => {:title => 'Sign In', :cancel_path => root_path} %>

  <div class="form__contents">

    <div class="form_errors"><%= alert %></div>

    <fieldset>
      <ul class="form__fields list-bare">
        <li class="form__field">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </li>
        <li class="form__field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </li>
        <% if devise_mapping.rememberable? -%>
          <li class="form__field">
            <%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
          </li>
        <% end -%>
      </ul>
    </fieldset>
  </div>

  <div class="form__footer">
    <%= f.submit "Sign in", class: 'btn btn--primary' %>
  </div>

<% end %>

<%= render :partial => "devise/shared/links" %>

<script>
document.getElementById('user_email').focus();
</script>

<section>
  
  <%= render :partial => 'header' %>
  
  <%= form_for(@user, :url => account_path(@user), :html => { :multipart => true }) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div id="page_content">
    <section>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </div>
    </section>

    <aside>
      <div class="form">
        
        <div class="field">
          <%= f.label :photo %><br />
          <% if @user.avatar.exists? -%>
            <%= image_tag @user.avatar.url(:normal) %>
            <%= check_box_tag 'delete_avatar' %> delete photo?
          <% end -%>
          <%= f.file_field :avatar %>
        </div>
        
        <% if current_user.administrator -%>
        <div class="field">
          <%= f.label :administrator %><br />
          <%= f.check_box :administrator %>
        </div>
        <% end -%>
        
      </div>
    </aside>
  </div>

    <div class="actions">
      <%= f.submit %>
      <% if current_user.administrator -%>
       | <%= link_to 'Cancel', accounts_path %>
      <% else -%>
       | <%= link_to 'Cancel', root_path %>
      <% end -%>
    </div>
  <% end %>
  
</section>

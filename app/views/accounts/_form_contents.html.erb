<div class="form__contents">

  <%= render :partial => 'form_errors' %>

  <fieldset>
    <ul class="form__fields list-bare">
      <li class="form__field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </li>
      <li class="form__field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </li>
      <li class="form__field">
        <%= f.label :avatar %>
        <% if @user.avatar.exists? -%>
          <%= image_tag @user.avatar.url(:normal) %>
          <%= check_box_tag 'delete_avatar' %> delete photo?
        <% end -%>
        <%= f.file_field :avatar %>
      </li>

      <li class="form__field">
        <%= f.label :portrait %>
        <% if @user.portrait.exists? -%>
          <%= image_tag @user.portrait.url(:thumb) %>
          <%= check_box_tag 'delete_portrait' %> delete photo?
        <% end -%>
        <%= f.file_field :portrait %>
        <span class="help">(2x3 aspect ratio)</span>
      </li>

      <li class="form__field">
        <%= f.label :biography %>
        <%= f.text_area :bio, :size => "40x5" %>
      </li>

      <% if current_user.administrator -%>
      <li class="form__field">
        <%= f.label :administrator %>
        <%= f.check_box :administrator %>
      </li>
      <% end -%>
    </ul>
  </fieldset>
</div>

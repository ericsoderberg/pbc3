<% title('Search') -%>

<h1>Search</h1>

<table id="search_results">
  <% @search.each_hit_with_result do |hit, page| -%>
    <tr class="search_result">
      <td><%= link_to page.name, friendly_page_path(page) %></td>
      <td><%= h truncate(page.snippet_text, :length => 100) %></td>
    </tr>
  <% end -%>
</table>


$('#<%= dom_id(@invitation) %>').addClass('updated');
setTimeout(function () {
  $('#<%= dom_id(@invitation) %>').removeClass('updated');
}, 1000);
<% Invitation.possible_responses.each do |response| -%>
$('#<%= response %> .value').text(<%= @summary[response] %>);
<% end -%>
$('#<%= dom_id(@invitation) %> h3').text('<%= @heading %>');
$('#<%= dom_id(@invitation) %> span.help').text('<%= @help_message %>');

<% if videos and not videos.empty? -%>
<ul class="gallery">
  <% videos.each do |video| -%>
  <li>
    <%= render :partial => 'videos/video', :locals => {:video => video} %>
  </li>
  <% end -%>
</ul>
<% end -%>

<%= javascript_tag do %>
$(function() {
  $('.votes form').live('click', function () {
    $(this).closest('.votes').css('opacity', 0.3);
  });
});
<% end -%>

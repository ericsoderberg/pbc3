<%= form_for(@video, :url => [@page, @video],
  :html => { :multipart => true }) do |f| %>
  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :page_id %>
  <div class="field">
    <%= f.label :file_1 %><span class="help">H.264 format</span><br />
    <%= f.file_field :video %>
  </div>
  <div class="field">
    <%= f.label :file_2 %><span class="help">VP8/WebM format</span><br />
    <%= f.file_field :video2 %>
  </div>
  <div class="field">
    <%= f.label "YouTube ID" %><br />
    <%= f.text_field :youtube_id, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :caption %><br />
    <%= f.text_field :caption, :size => 40 %>
  </div>
  <div class="actions">
    <%= f.submit (@video.id ? 'Update Video' : 'Add Video') %>
    <% if @video.id -%>
    | <%= link_to 'Delete video', [@page, @video], :confirm => 'Are you sure?',
      :method => :delete %>
    <% end -%>
  </div>
<% end %>

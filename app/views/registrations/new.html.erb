<% title('PBC - Sign Up') -%>

<section id="sign_up">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <p id="sign_up_email_confirmation"><%= f.label :email %><br />
  <%= f.text_field :email_confirmation %></p>
  
  <p id="sign_up_name"><%= f.label :name %><br />
  <%= f.text_field :name %></p>

  <p id="sign_up_email"><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p id="sign_up_password"><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p id="sign_up_password_confirmation"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
</section>

<%= form_for(@audio, :url => [@page, @audio],
  :html => { :multipart => true }) do |f| %>
  <% if @audio.errors.any? %>
    <div class="form__error-explanation">
      <h2><%= pluralize(@audio.errors.count, "error") %> prohibited this audio from being saved:</h2>

      <ul>
      <% @audio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :page_id %>
  <div class="field">
    <%= f.label :file_1 %><div class="help">mp3 format</div>
    <%= f.file_field :audio %>
  </div>
  <!--div class="field">
    <%= f.label :file_2 %><div class="help">ogg format</div>
    <%= f.file_field :audio2 %>
  </div-->
  <div class="field">
    <%= f.label :caption %><br />
    <%= f.text_field :caption, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date, :placeholder => 'MM/DD/YYYY',
      :value => (@audio.date ? l(@audio.date.to_date()) : '') %>
  </div>
  <div class="field">
    <%= f.label :verses %><br />
    <%= f.text_field :verses, :size => 40  %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author, :size => 40  %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => '30x2' %>
  </div>
  <div class="actions">
    <%= f.submit 'Upload Audio' %>
    <% if @audio.id -%>
    | <%= link_to 'Delete audio', [@page, @audio], data: {confirm: 'Are you sure?'},
      method: :delete %>
    <% end -%>
  </div>
<% end %>

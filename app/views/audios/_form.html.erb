<%= form_for(@audio, :url => [@page, @audio],
  :html => { :multipart => true }) do |f| %>
  <% if @audio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@audio.errors.count, "error") %> prohibited this audio from being saved:</h2>

      <ul>
      <% @audio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :page_id %>
  <div class="field">
    <%= f.label :file %><br />
    <%= f.file_field :audio %><br />
    <%= f.label :caption %><br />
    <%= f.text_field :caption, :size => 40 %><br />
  </div>
  <div class="actions">
    <%= f.submit 'Upload Audio' %>
    <% if @audio.id -%>
    | <%= link_to 'Delete audio', [@page, @audio], :confirm => 'Are you sure?',
      :method => :delete %>
    <% end -%>
  </div>
<% end %>

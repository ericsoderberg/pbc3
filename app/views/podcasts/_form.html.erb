<%= form_for(@podcast, :url => page_podcast_path(@page),
  :html => { :multipart => true }) do |f| %>
  <% if @podcast.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@podcast.errors.count, "error") %> prohibited this podcast from being saved:</h2>

      <ul>
      <% @podcast.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="regular_content">
    <section>
      <%= f.hidden_field :page_id %>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :subtitle %><br />
        <%= f.text_field :subtitle, :size => 80 %>
      </div>
      <div class="field">
        <%= f.label :summary %><br />
        <%= f.text_area :summary, :size => '80x5' %>
      </div>
      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description, :size => '80x5' %>
      </div>
    </section>
    
    <aside>
      <div class="field">
        <%= f.label :owner_email %><br />
        <%= text_field_tag :user_email, (@podcast.owner ? @podcast.owner.email : ''), :size => 40 %>
        <% if @podcast.owner -%>
          <br />
          <%=h @podcast.owner.name %>
        <% end -%>
      </div>
      <div class="field">
        <%= f.label :category %><br />
        <%= f.text_field :category %>
      </div>
      <div class="field">
        <%= f.label :image %><br />
        <% if @podcast.image.exists? -%>
          <%= image_tag @podcast.image.url(:thumb) %>
          <%= check_box_tag 'delete_image' %> delete image?
        <% end -%>
        <%= f.file_field :image %>
      </div>
    </aside>
    
  </div>
  
  <div class="actions">
    <%= f.submit %>
    <%= render 'pages/cancel_controls' %>
    <% if @podcast.title -%>
     | <%= link_to 'Delete podcast', page_podcast_path(@page),
      :confirm => 'Are you sure?',
      :method => :delete %>
    <% end -%>
  </div>
<% end %>

<%= javascript_tag do %>
  <%= render :partial => 'pages/form_aids.js' -%>
<% end -%>

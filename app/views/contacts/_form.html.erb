<%= form_for(@contact, :url => [@page, @contact],
  :html => {:multipart => true}) do |f| %>
  <% if @contact.errors.any? %>
    <div class="form__error-explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :page_id %>
  <div class="field">
    <%= f.label :user_email %><br />
    <% if @contact.id -%>
      <%= @contact.user.email %>
    <% else -%>
    <%= text_field_tag :user_email, '' %>
    <% end -%>
  </div>
  <div class="field">
    <%= f.label :role %><br />
    <%= f.text_field :role %>
  </div>
  <div class="field">
    <%= f.label :portrait %><br/>
    <% if @contact.portrait.exists? -%>
      <%= image_tag @contact.portrait.url(:thumb) %>
      <%= check_box_tag 'delete_portrait' %> delete photo?<br/>
    <% end -%>
    <%= f.file_field :portrait %><br/>
    <span class="help">(2x3 aspect ratio)</span>
  </div>
  
  <div class="field">
    <%= f.label :biography %><br />
    <%= f.text_area :bio, :size => "40x5" %>
  </div>
  <div class="actions">
    <%= f.submit "#{@contact.user ? 'Update' : 'Add'} contact" %>
    <% if @contact.user -%>
    | <%= link_to 'Remove contact', [@page, @contact], data: {confirm: 'Are you sure?'},
        method: :delete %>
    <% end -%>
  </div>
<% end %>


<ul class="card-pile gallery">
  <% contacts.each do |contact| -%>
    <li class="card-container">
      <div class="card-card">
        <div class="card-face card-front">
          <div class="card-image">
          <% if contact.user.portrait.exists? -%>
            <%= image_tag contact.user.portrait.url(:normal),
              :width => '210px', :class => 'portrait' %>
          <% end -%>
          </div>
          <div class="card-name">
            <%= contact.user.name %><br/>
            <%= contact.role %>
          </div>
        </div>
        <div class="card-face card-back">
          <h4>
            <%= contact.user.name %>
            <%= link_to image_tag('mail.png'),
              email_page_contact_path(@page, contact) %>
          </h4>
          <div class="bio">
            <%= contact.user.bio %>
          </div>
        </div>
      </div>
    </li>
  <% end -%>
</ul>

<%= content_tag_for(:li, contact) do %>
  <%= link_to image_tag('mail.png'), email_page_contact_path(@page, contact) %>
  <div class="contact_name">
    <%= contact.user.name %>
    <% if contact.role and not contact.role.empty? -%>
      <span class="contact_role"><%= contact.role %></span>
    <% end -%>
  </div>
<% end %>

// event date picker
$(function() {
  
  $('#event_start_at').datetimepicker({
    stepHour: 1,
    stepMinute: 15,
    ampm: true,
    hourGrid: 4,
    minuteGrid: 15,
    americanMode: true,
    separator: '<%= DateTime::FORM_SEPARATOR %>'
  });
  
  $('#event_stop_at').datetimepicker({
    stepHour: 1,
    stepMinute: 15,
    ampm: true,
    hourGrid: 4,
    minuteGrid: 15,
    americanMode: true,
    separator: '<%= DateTime::FORM_SEPARATOR %>'
  });
  
  $('#event_start_at').change(function() {
    $('#event_stop_at').val($('#event_start_at').val());
  });
});

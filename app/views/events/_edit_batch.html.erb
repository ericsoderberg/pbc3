<div id="page_content">
  <section>
    <ul id="events_list">
      <%= render :partial => @page.events, :locals => {:no_name => false} %>
    </ul>
    <div id="add_event">
      <%= link_to 'Add event',
        edit_page_path(@page, :aspect => 'events', :create => true) %>
    </div>
  </section>

  <aside>
    <div class="event_form">
      <h3><%= (@event.name ? "Edit #{@event.name}" : 'Add Event') %></h3>
      <%= render 'events/form' %>
    </div>
  </aside>
</div>

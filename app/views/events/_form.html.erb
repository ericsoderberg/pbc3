<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :page_id %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br />
    <%= f.text_field :start_at,
      :value => l(@event.start_at, :format => :form) %>
  </div>
  <div class="field">
    <%= f.label :stop_at %><br />
    <%= f.text_field :stop_at,
      :value => l(@event.stop_at, :format => :form) %>
  </div>
  <div class="field">
    <%= f.label :all_day %><br />
    <%= f.check_box :all_day %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="actions">
    <%= f.submit %> |
    <%= link_to 'Delete event', @event, :confirm => 'Are you sure?',
      :method => :delete %>
  </div>
<% end %>

<%= javascript_tag do -%>
  <%= render :partial => 'events/form_aids.js' %>
<% end -%>
<%= form_for(@event, :url => [@page, @event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :page_id %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br />
    <%= f.text_field :start_at,
      :value => l(@event.start_at, :format => :form) %>
  </div>
  <div class="field">
    <%= f.label :stop_at %><br />
    <%= f.text_field :stop_at,
      :value => l(@event.stop_at, :format => :form) %>
  </div>
  <div class="field">
    <%= f.label :all_day?, :class => 'inline' %>
    <%= f.check_box :all_day %>
  </div>
  <div class="field">
    <%= f.label :location %><br/>
    <span class="help">Remember to make reservations!</span><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :notes %><br/>
    <%= f.text_area :notes, :size => '30x4' %>
  </div>
  <% if current_user.administrator? -%>
  <div class="field">
    <%= f.label :feature_on_main_calendar?, :class => 'inline' %>
    <%= f.check_box :featured %>
  </div>
  <% if @event.id -%>
  <div class="field">
    <%= f.label :page %><br/>
    <%= f.collection_select :page_id, @pages, :id, :name,
      {}, {:class => 'page'} %>
  </div>
  <% end -%>
  <% end -%>
  <div class="actions">
    <% if @event.peers.count > 1 -%>
      <%= f.submit 'Update all' %>
      | <%= f.submit "Update current only"%>
    <% else -%>
      <%= f.submit %>
    <% end -%>
    <% if @event.name -%>
    | <%= link_to 'Delete event', [@page, @event], :confirm => 'Are you sure?',
        :method => :delete %>
    <% end -%>
  </div>
<% end %>

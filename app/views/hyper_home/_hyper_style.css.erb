<%= javascript_include_tag 'processing-1.2.1' %>
<style>
/* http://www.colourlovers.com/palette/307417/disco_night */
body {
  background-color: #F300FF; /* #010003; #4C00FF;*/
	}
div#content {
	position: relative;
  background: none; /*#280045;*/
	color: #2FEBCB;
	min-height: 800px;
  }
	div#content canvas {
	  position: absolute;
	  left: 0;
	  top: 0;
		z-index: -1;
		}
#site_header h1 a {
  text-decoration: none;
  color: #2FEBCB;
	-webkit-animation: colors 5s infinite alternate;
	}
#site_header h2 {
	color: #2FEBCB;
	border: none;
	opacity: 0.75;
	-webkit-animation: pulse 1.5s infinite;
	}
#auth {
  -webkit-animation: fades 5s infinite;
  }

@-webkit-keyframes pulse {
  from {
    -webkit-transform: scale(1.0);
    opacity: 1;
  }
  50% {
    -webkit-transform: scale(1.2);
    opacity: 1;
  }
  to { 
    -webkit-transform: scale(1.0);
    opacity: 1;
  }
}

@-webkit-keyframes fades {
  from {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  to { 
    opacity: 0;
  }
}

@-webkit-keyframes slides {
  from {
    padding-left: 0px;
    padding-right: 0px;
  }
  50% {
    padding-left: 20px;
    padding-right: 20px;
  }
  to { 
    padding-left: 0px;
    padding-right: 0px;
  }
}

@-webkit-keyframes colors {
  0% {color: #ff3333;}
	25% {color: #ffff33;}
	50% {color: #33ff33;}
	75% {color: #33ffff;}
	100% {color: #3333ff;}
}

@-webkit-keyframes jiggle {
  0% {
		-webkit-transform: rotate(2deg);
  	-moz-transform: rotate(2deg);
		left: 2px;
		top: 2px;
	}
	40% {
		-webkit-transform: rotate(0deg);
  	-moz-transform: rotate(0deg);
		left: -2px;
		top: -2px;
	}
	60% {
		-webkit-transform: rotate(0deg);
  	-moz-transform: rotate(0deg);
		left: 2px;
		top: 2px;
	}
	100% {
		-webkit-transform: rotate(-2deg);
  	-moz-transform: rotate(-2deg);
		left: -2px;
		top: -2px;
	}
}

#site_header div#auth ul li a {
	color: #2FEBCB;
	}
#site_nav {
	height: 40px;
  background-color: #7A0DFF;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#7A0DFF), to(#4C00FF));
  background: -moz-linear-gradient(270deg, #7A0DFF, #4C00FF);
  border-radius: 4px;
	border: 2px solid #cccc33;
	-webkit-animation: fades 5s infinite;
	}
#site_nav li {
	/*-webkit-animation: slides 3s infinite;*/
}
#site_nav ul li a {
	color: #fff;
	}
#site_nav ul li:first-of-type a {
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
	}
#site_nav ul li a:hover, #site_nav ul li.active a {
	color: #280045;
	background-color: #2FEBCB;
	}
footer {
	position: absolute;
	bottom: 30px;
 }

#hyper_title {
	text-align: center;
	font-size: 40px;
	line-height: 40px;
	color: #cccc33;
	background-color: rgba(32, 128, 128, 0.5);
	/*text-shadow: -3px 0 4px #006;*/
	text-shadow: 0px 0px 8px #f8f;
	-webkit-mask-image: -webkit-gradient(linear, left top,
	    left bottom, from(rgba(0,0,0,1)), to(rgba(0,0,0,0.7)));
	-webkit-animation: pulse 2s infinite alternate;
}

#hyper_photos {
	position: relative;
	text-align: center;
}

.photo {
	position: relative;
	display: inline-block;
	padding: 3px 3px 3px 3px;
	margin: 5px;
  background: #cccc33;
  border: 1px dotted #fff;
	border-radius: 12px;
  -webkit-box-shadow: 0px 2px 15px #666;
  -moz-box-shadow: 0px 2px 15px #666;
  box-shadow: 0px 2px 15px #666;
  z-index: 10;
  -webkit-transform: rotate(5deg);
  -moz-transform: rotate(5deg);
	-webkit-animation: jiggle 0.8s infinite alternate;
	}
	.photo img {
		width: 300px;
		}
	.photo_0 img, .photo_2 img {
		width: 280px;
		}
	.photo_1 img, .photo_4 img {
		width: 260px;
		}
</style>
